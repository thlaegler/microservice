<idea-plugin version="2">
	<extensions defaultExtensionNs="org.eclipse.xtext.idea">
		<resourceFactory 
			type="architecture"
			class="org.eclipse.xtext.resource.IResourceFactory"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
		/>
		<resourceServiceProvider
			uriExtension="architecture"
			class="org.eclipse.xtext.idea.resource.IResourceIdeaServiceProvider"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
		/>

		<lang.setup
			language="com.laegler.microservice.editor.ArchitectureLang"
			implementationClass="com.laegler.microservice.editor.idea.ArchitectureLangIdeaSetup"
		/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<psi.treeChangePreprocessor implementation="com.laegler.microservice.editor.idea.lang.psi.ArchitectureLangCodeBlockModificationListener"/>

		<fileTypeFactory implementation="com.laegler.microservice.editor.idea.lang.ArchitectureLangFileTypeFactory"/>
		<stubElementTypeHolder class="com.laegler.microservice.editor.idea.lang.ArchitectureLangElementTypeProvider"/>
		<lang.ast.factory 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.lang.BaseXtextASTFactory"
		/>
		<lang.parserDefinition 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="com.laegler.microservice.editor.idea.lang.parser.ArchitectureLangParserDefinition"
		/>
		<lang.findUsagesProvider 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.findusages.BaseXtextFindUsageProvider"
		/>
		<lang.refactoringSupport 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.refactoring.BaseXtextRefactoringSupportProvider"
		/>
		<lang.namesValidator 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="com.intellij.lang.refactoring.NamesValidator"
		/>
		<lang.syntaxHighlighterFactory key="com.laegler.microservice.editor.ArchitectureLang" implementationClass="com.laegler.microservice.editor.idea.highlighting.ArchitectureLangSyntaxHighlighterFactory" />
		<lang.braceMatcher 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="com.intellij.lang.PairedBraceMatcher"
		/>
		<annotator 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.annotation.IssueAnnotator"
		/>
		<completion.contributor language="com.laegler.microservice.editor.ArchitectureLang" implementationClass="com.laegler.microservice.editor.idea.completion.ArchitectureLangCompletionContributor"/>
		<pom.declarationSearcher implementation="com.laegler.microservice.editor.idea.lang.pom.ArchitectureLangPomDeclarationSearcher"/>

		<lang.psiStructureViewFactory 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="com.intellij.lang.PsiStructureViewFactory"
		/>
		<facetType implementation="com.laegler.microservice.editor.idea.facet.ArchitectureLangFacetType"/>
		<lang.documentationProvider 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.documentation.IdeaDocumentationProvider"
		/>
		<colorSettingsPage implementation="com.laegler.microservice.editor.idea.highlighting.ArchitectureLangColorSettingsPage"/>
		<highlightVisitor implementation="com.laegler.microservice.editor.idea.highlighting.ArchitectureLangSemanticHighlightVisitor"/>

		<lang.formatter 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="com.intellij.formatting.FormattingModelBuilder"
		/>
		<lang.commenter 
			language="com.laegler.microservice.editor.ArchitectureLang"
			factoryClass="com.laegler.microservice.editor.idea.ArchitectureLangExtensionFactory"
			implementationClass="com.intellij.lang.CodeDocumentationAwareCommenter"
		/>
	</extensions>
</idea-plugin>
